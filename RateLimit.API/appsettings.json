{
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "::1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "20s",
            "Limit": 30
          }
        ]
      }
    ]
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "RealIpHeader": "x-real-id",
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1" ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "20s",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/products",
        "Period": "1h",
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/products",
        "Period": "20s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "1d",
        "Limit": 500
      },
      {
        "Endpoint": "GET:/api/categories",
        "Period": "30s",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/categories",
        "Period": "30s",
        "Limit": 10
      }
    ]

  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
